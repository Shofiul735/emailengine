{{> security_header}}

<div class="card mb-4">



    <div class="card-body">

        <ul class="list-group list-group-flush">

            <li class="list-group-item">
                <div class="row" style="align-items: center;">
                    <div class="col-4">Username</div>
                    <div class="col-4">
                        {{username}}
                    </div>
                    <div class="col-4 text-right">
                        {{#if authData.enabled}}
                        <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                            data-target="#logoutAllModal" title="Log out all sessions" id="logout-all-btn"
                            data-placement="top">
                            Sign out everywhere
                        </button>
                        {{/if}}
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row" style="justify-content: center; align-items: center;">
                    <div class="col-4">Password</div>
                    <div class="col-4">
                        {{#if authData.enabled}} ******** {{else}}Not configured{{/if}}
                    </div>
                    <div class="col-4 text-right">
                        <a href="/admin/account/password" class="btn btn-outline-primary bn-xs">
                            {{#if authData.enabled}}
                            Change Password
                            {{else}}
                            Create Password
                            {{/if}}
                        </a>
                    </div>
                </div>
            </li>

            {{#if authData.enabled}}
            <li class="list-group-item">
                <div class="row" style="justify-content: center; align-items: center;">
                    <div class="col-4">Two-Factor Authentication (2FA)</div>
                    <div class="col-4">
                        {{#if totp.enabled}}
                        <span class="badge badge-success">Authenticator app</span>
                        {{else}}
                        <span class="badge badge-light">Not configured</span>
                        {{/if}}
                    </div>
                    <div class="col-4 text-right">
                        {{#if totp.enabled}}
                        <button type="button" class="btn btn-outline-danger" data-toggle="modal"
                            data-target="#disableTfaModal" title="Disable Two-factor authentication"
                            id="disable-tfa-btn" data-placement="top">
                            Disable 2FA
                        </button>
                        {{else}}
                        <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                            data-target="#enableTfaModal" title="Enable Two-factor authentication" id="disable-tfa-btn"
                            data-placement="top">
                            Enable 2FA
                        </button>
                        {{/if}}
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row" style="justify-content: center; align-items: center;">
                    <div class="col-4">Single Sign-On (SSO)</div>
                    <div class="col-4">
                        {{#if providers.okta}}
                        <span class="badge badge-success">Okta</span>
                        {{else}}
                        <span class="badge badge-light">Not configured</span>
                        {{/if}}
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                            data-target="#ssoInstructionsModal" title="Setting up SSO" id="sso-instructions"
                            data-placement="top">
                            Setup Guide
                        </button>
                    </div>
                </div>
            </li>
            {{/if}}
        </ul>
    </div>
</div>

<div class="modal fade" id="disableTfaModal" tabindex="-1" aria-labelledby="disableTfaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="disableTfaModalLabel">Disable Two-Factor Authentication</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Disabling two-factor authentication will make your account less secure. Are you sure you want to continue?</p>
            </div>
            <div class="modal-footer">
                <form method="post" action="/admin/account/tfa/disable">
                    <input type="hidden" name="crumb" value="{{crumb}}" />
                    <input type="hidden" name="type" value="totp" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Yes, Disable 2FA</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="enableTfaModal" tabindex="-1" aria-labelledby="enableTfaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="/admin/account/tfa/enable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="enableTfaModalLabel">Enable Two-Factor Authentication</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div>
                        <img src="{{totp.dataUrl}}" style="max-width: 200px; display: block; margin: 0 auto;">
                    </div>

                    <div class="form-group">
                        <label for="code">Scan the QR code with your authenticator app (such as Google Authenticator or Authy), then enter the 6-digit verification code below.</label>
                        <input type="text" pattern="[0-9]{6}" class="form-control {{#if errors.code}}is-invalid{{/if}}"
                            id="code" name="code" required />
                        {{#if errors.code}}
                        <span class="invalid-feedback">{{errors.code}}</span>
                        {{/if}}
                    </div>

                </div>
                <div class="modal-footer">

                    <input type="hidden" name="crumb" value="{{crumb}}" />
                    <input type="hidden" name="type" value="totp" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Enable 2FA</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="logoutAllModal" tabindex="-1" aria-labelledby="logoutAllModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="/admin/account/logout-all">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutAllModalLabel">Sign Out from All Devices</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <p>This will sign you out from all browsers and devices where you're currently signed in. You'll need to sign in again on each device.</p>

                </div>
                <div class="modal-footer">

                    <input type="hidden" name="crumb" value="{{crumb}}" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary"><i
                            class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i> Sign Out Everywhere</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="ssoInstructionsModal" tabindex="-1" aria-labelledby="ssoInstructionsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ssoInstructionsModalLabel">Configure Single Sign-On with Okta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <p>Follow these steps to configure Single Sign-On with Okta:</p>
                <ol>
                    <li>Create a new web application in your Okta dashboard using the Redirect URI below</li>
                    <li>Configure the required environment variables for EmailEngine</li>
                    <li>Restart EmailEngine to apply the changes</li>
                </ol>

                <p><strong>Redirect URI for your Okta application:</strong><br>
                    <code style="color:#333;">{{serviceUrl}}/admin/login/okta</code>
                </p>

                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Environment variable</th>
                            <th>Current value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>
                                <code style="color:#333;">OKTA_OAUTH2_ISSUER</code>
                            </th>
                            <td>
                                {{#if okta.OKTA_OAUTH2_ISSUER}}
                                <code
                                    style="display: inline-block; overflow: hidden; color:#333;">{{okta.OKTA_OAUTH2_ISSUER}}</code>
                                {{else}}
                                Not configured (enter your Okta issuer URL)
                                {{/if}}
                            </td>
                        </tr>

                        <tr>
                            <th><code style="color:#333;">OKTA_OAUTH2_CLIENT_ID</code></th>
                            <td>
                                {{#if okta.OKTA_OAUTH2_CLIENT_ID}}
                                <code
                                    style="display: inline-block; overflow: hidden; color:#333;">{{okta.OKTA_OAUTH2_CLIENT_ID}}</code>
                                {{else}}
                                Not configured
                                {{/if}}
                            </td>
                        </tr>

                        <tr>
                            <th><code style="color:#333;">OKTA_OAUTH2_CLIENT_SECRET</code></th>
                            <td>
                                {{#if okta.OKTA_OAUTH2_CLIENT_SECRET}}
                                <code
                                    style="display: inline-block; overflow: hidden; color:#333;">{{okta.OKTA_OAUTH2_CLIENT_SECRET}}</code>
                                {{else}}
                                Not configured
                                {{/if}}

                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>